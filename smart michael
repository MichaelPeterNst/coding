        double a, b;
        char op;

        cout << "Masukkan: angka operator angka\n> ";
        cin >> a >> op >> b;

        if (op == '+') cout << "Hasil: " << a + b << endl;
        else if (op == '-') cout << "Hasil: " << a - b << endl;
        else if (op == '*') cout << "Hasil: " << a * b << endl;
        else if (op == '/') cout << "Hasil: " << a / b << endl;
